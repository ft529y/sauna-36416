<%= render "shared/header_logo" %>


<div class="user-show-top">
  <ul class="user-show-list">
    MENU
    <li class="show-list"><span><i class="fas fa-chevron-down"></i></span>
      <ul class="list-detail">
        <li class="list-single"><a href="#">Sub-menu01</a></li>
        <li class="list-single"><a href="#">Sub-menu02</a></li>
        <li class="list-single"><%= link_to "退会", unsubscribe_path(current_user.id) %></li>
      </ul>
    </li>
  </ul>
</div>


<div class="user-detail-wrapper">
  <div class="user-detail-head">
    <div class="user-head-text">
      ユーザー詳細ページ
    </div>

    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-list-user">お名前</th>
          <td class="detail-name-user"><%= @user.last_name %><%= current_user.first_name %></td>
        </tr>
        <tr>
          <th class="detail-list-user">生年月日</th>
          <td class="detail-name-user"><%= @user.birthday %></td>
        </tr>
        <tr>
          <th class="detail-list-user">ニックネーム</th>
          <td class="detail-name-user"><%= @user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-list-user">メールアドレス</th>
          <td class="detail-name-user"><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="withdrawal"><%= link_to "退会ページはこちら", unsubscribe_path(current_user.id), class: "show-withdrawal-btn" %></div>